#            ft_lstiter_bonus.c \
#            ft_lstmap_bonus.c

# BONUS_OBJS = $(BONUS_SRCS:.c=.o)

# â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€ Â· Â· à­¨à­§ Â· Â· â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®
#  ï¼£ï½ï½ï½ï½‰ï½Œï½ï½”ï½‰ï½ï½ ï¼¶ï½ï½’ï½‰ï½ï½‚ï½Œï½…ï½“
# â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€ Â· Â· à­¨à­§ Â· Â· â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯

INCS    = ./
NAME    = libft.a
LIBC    = ar rc
CC      = cc
CFLAGS  = -Wall -Werror -Wextra -g
RM      = rm -f

# Color codes
# â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
PINK = \033[38;2;255;105;180m
RESET = \033[0m

#â‹†âœ´ï¸Ëšï½¡â‹†âœ¿Ëšï½¡â‹†ï½¡â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšâ‹†âœ´â‹†ï½¡â‹†â‹†âœ´ï¸Ëšï½¡#
#               Compilation Rules             #
#Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–#

# Compile .c files into .o files
.c.o:
	@echo "$(PINK)Compiling $<...$(RESET)"
	$(CC) $(CFLAGS) -c $< -o $@ -I $(INCS)

# Link all object files into the library archive
$(NAME): $(OBJS)
	@echo "$(PINK)Creating library $(NAME)...$(RESET)"
	$(LIBC) $@ $^

#â‹†âœ´ï¸Ëšï½¡â‹†âœ´ï¸Ëšï½¡â‹†ï½¡â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ¿Ëšï½¡â‹†â‹†âœ´ï¸Ëšâ‹†âœ´â‹†ï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†âœ´ï¸#
#                 Main Commands                 #
#Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§#

# Default target, builds the library
all: $(NAME)

# Bonus target, includes additional linked list functions
bonus: $(OBJS) $(BONUS_OBJS)
	@echo "$(PINK)Adding bonus files to $(NAME)...$(RESET)"
	$(LIBC) $(NAME) $(OBJS) $(BONUS_OBJS)

#â‹†âœ¿Ëšï½¡â‹†âœ´ï¸Ëšï½¡â‹†ï½¡â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšâ‹†âœ´â‹†ï½¡â‹†â‹†âœ´ï¸Ëšï½¡#
#               Cleaning commands             #
#Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–#

#     â„ğ•–ğ•ğ• ğ•§ğ•– ğ• ğ•“ğ•›ğ•–ğ•”ğ•¥ ğ•—ğ•šğ•ğ•–ğ•¤   #
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
clean:
	@echo "$(PINK)Cleaning up object files...$(RESET)"
	$(RM) $(OBJS) $(BONUS_OBJS)

# ğ”½ğ•¦ğ•ğ• ğ•”ğ•ğ•–ğ•’ğ•Ÿ: ğ•£ğ•–ğ•ğ• ğ•§ğ•– ğ•ğ•šğ•“ğ•£ğ•’ğ•£ğ•ª ğ•—ğ•šğ•ğ•–ğ•¤ ğ•’ğ•¤ ğ•¨ğ•–ğ•ğ• #
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€

fclean: clean
	@echo "$(PINK)Removing $(NAME) and libft.so...$(RESET)"
	$(RM) $(NAME)
	$(RM) libft.so

# â„ğ•–ğ•“ğ•¦ğ•šğ•ğ•• ğ•–ğ•§ğ•–ğ•£ğ•ªğ•¥ğ•™ğ•šğ•Ÿğ•˜ ğ•—ğ•£ğ• ğ•  ğ•¤ğ•”ğ•£ğ•’ğ•¥ğ•”ğ•™ #
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
re: fclean all

#â‹†âœ´ï¸Ëšï½¡â‹†âœ´ï¸Ëšï½¡â‹†ï½¡â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†âœ¿â‹†Ëšâœ´â‹†âœ´Ëšï½¡â‹†â‹†âœ´ï¸Ëšâ‹†âœ´#
#                 Phony Targets                 #
#Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§â‚ŠËšâ™¡Ëšâ‚Šâ€§âºË–Ë–âºâ€§#

.PHONY: all bonus so clean fclean re

so: re bonus
	rm -f libft.so
	$(CC) -nostartfiles -fPIC ${CFLAGS} ${SRCS}
	$(CC) -nostartfiles -shared -o libft.so ${OBJS} $(BONUS_OBJS)

#  à«® Ë¶áµ” áµ• áµ”Ë¶ áƒ                               âœ§â‚Šâºâœ§â‚Š á“šá˜á—¢
