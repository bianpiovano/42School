CC = cc
LIBCC = ar rcs
NAME = libmylib.a 

RM = rm -rf
CFLAGS = -Wall -Werror -Wextra

# ğ•Šğ•¥ğ•£ğ•šğ•Ÿğ•˜ ğ•„ğ•’ğ•Ÿğ•šğ•¡ğ•¦ğ•ğ•’ğ•¥ğ•šğ• ğ•Ÿ ğ”½ğ•¦ğ•Ÿğ•”ğ•¥ğ•šğ• ğ•Ÿğ•¤ #
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
STR_SRCS = libft/ft_strlen.c \
           libft/ft_strlcpy.c \
           libft/ft_strlcat.c \
           libft/ft_strchr.c \
           libft/ft_strrchr.c \
           libft/ft_strncmp.c \
           libft/ft_strnstr.c \
           libft/ft_strdup.c \
           libft/ft_substr.c \
           libft/ft_strjoin.c \
           libft/ft_strtrim.c \
           libft/ft_split.c \
           libft/ft_strmapi.c \
           libft/ft_striteri.c

#â€¢Â°Â¯`â€¢â€¢ ğ•„ğ•–ğ•ğ• ğ•£ğ•ª ğ”½ğ•¦ğ•Ÿğ•”ğ•¥ğ•šğ• ğ•Ÿğ•¤ â€¢â€¢`Â¯Â°â€¢#
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
MEM_SRCS = libft/ft_bzero.c \
           libft/ft_memcpy.c \
           libft/ft_memset.c \
           libft/ft_memmove.c \
           libft/ft_memchr.c \
           libft/ft_memcmp.c \
           libft/ft_calloc.c

# â„‚ğ•™ğ•’ğ•£ğ•’ğ•”ğ•¥ğ•–ğ•£ â„‚ğ•™ğ•–ğ•”ğ•œ ğ•’ğ•Ÿğ•• â„‚ğ• ğ•Ÿğ•§ğ•–ğ•£ğ•¤ğ•šğ• ğ•Ÿ ğ”½ğ•¦ğ•Ÿğ•”ğ•¥ğ•šğ• ğ•Ÿğ•¤ #
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
CHAR_SRCS = libft/ft_isalnum.c \
            libft/ft_isalpha.c \
            libft/ft_isascii.c \
            libft/ft_isdigit.c \
            libft/ft_isprint.c \
            libft/ft_toupper.c \
            libft/ft_tolower.c

# â„‚ğ• ğ•Ÿğ•§ğ•–ğ•£ğ•¤ğ•šğ• ğ•Ÿ ğ•’ğ•Ÿğ•• ğ•Œğ•¥ğ•šğ•ğ•šğ•¥ğ•ª ğ”½ğ•¦ğ•Ÿğ•”ğ•¥ğ•šğ• ğ•Ÿğ•¤ #
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
UTIL_SRCS = libft/ft_atoi.c \
            libft/ft_itoa.c

#â€¢Â°Â¯`â€¢â€¢ ğ”½ğ•šğ•ğ•– ğ”»ğ•–ğ•¤ğ•”ğ•£ğ•šğ•¡ğ•¥ğ• ğ•£ ğ”½ğ•¦ğ•Ÿğ•”ğ•¥ğ•šğ• ğ•Ÿğ•¤ â€¢â€¢`Â¯Â°â€¢#
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
FD_SRCS = libft/ft_putchar_fd.c \
          libft/ft_putstr_fd.c \
          libft/ft_putendl_fd.c \
          libft/ft_putnbr_fd.c

# get next line
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
GNL_SRCS = get_next_line/get_next_line.c \
			get_next_line/get_next_line_utils.c

# â„‚ğ• ğ•ğ•“ğ•šğ•Ÿğ•– ğ•’ğ•ğ• ğ•¤ğ• ğ•¦ğ•£ğ•”ğ•– ğ•—ğ•šğ•ğ•–ğ•¤ #
# â”€â”€â”€à­¨à§â”€â”€â”€â”€ â‘… â™¡ â‘…  â”€â”€â”€â”€à­¨à§â”€â”€â”€â”€
SRCS = $(STR_SRCS) $(MEM_SRCS) $(CHAR_SRCS) $(UTIL_SRCS) $(FD_SRCS) $(GNL_SRCS)
OBJS = $(SRCS:.c=.o)

all: ${NAME}

.c.o:
	${CC} $< -o $@ -c ${CFLAGS}

${NAME}: ${OBJS}
	${LIBCC} ${NAME} ${OBJS}

clean: 
	@echo "$(PINK)Cleaning up object files...$(RESET)"
	$(RM) $(OBJS)

fclean: clean
	@echo "$(PINK)Removing $(NAME)...$(RESET)"
	$(RM) $(NAME)

re: fclean all

#â‹†âœ´ï¸Ëšï½¡â‹†âœ´ï¸Ëšï½¡â‹†ï½¡â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†â‹†âœ´ï¸Ëšï½¡â‹†âœ¿â‹†Ëšâœ´â‹†âœ´Ëšï½¡â‹†â‹†âœ´ï¸Ëšâ‹†âœ´#
